<%= simple_form_for @user do |f| %>
	<%= f.input :firstname %>
	<%= f.input :lastname %>
	<%= f.input :email, disabled: true %>

	<% if current_user == @user %>
		<%= f.input :password %>
	<% end %>

	<% if current_user.admin? %>
		<%= f.input :role, collection: ['subscriber', 'admin'] %>
	<% end %>

	<%= f.button :submit %>
<% end %>

<% if current_user.admin? %>
	<h5><%=link_to "< Back to Admin", admin_pages_path %></h5>
<% else %>
	<h5><%= link_to " < Back to Home", root_path %></h5>
<% end %>
